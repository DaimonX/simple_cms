 <%= link_to("Add New Page", {action: 'new'}, :class => 'action new') %>
<table class="listing" summary="Pages list" style="border: 1px black">
    <tr class="header">
      <th>Subject</th>
      <th>Name</th>
      <th>Visible</th>
      <th>Permalink</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.subject.name if page.subject %></td>
      <td><%= page.name %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= page.permalink %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', id: page.id}, :class =>'action show') %>
        <%= link_to("Edit", {action: 'edit', id: page.id}, :class => 'action edit') %>
        <%= link_to("Delete", {action: 'delete', id: page.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>